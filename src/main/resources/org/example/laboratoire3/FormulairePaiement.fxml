<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.laboratoire3.FormulairePaiement">
    <VBox prefHeight="550.0" prefWidth="600.0" fx:id="VBoxLayout" spacing="15.0">
      <Label text="Formulaire de paiement">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="ErrorLabel" visible="false" managed="false" textFill="#ff4242" />
        <HBox alignment="BOTTOM_LEFT" spacing="10">
            <Label text="Mode de paiement:" />
            <ChoiceBox fx:id="PaymentModeChoiceBox" prefWidth="150.0" />
        </HBox>
        <TitledPane fx:id="CreditCardSection" collapsible="false" managed="true" text="Informations de la carte de crédit">
            <GridPane alignment="CENTER_LEFT" hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                </columnConstraints>
                <children>
                    <Label text="Numéro de carte de crédit:" />
                    <TextField fx:id="CreditCardNumberField" GridPane.columnIndex="1" />

                    <Label text="Date d'expiration de la carte (MM/dd):" GridPane.rowIndex="1" />
                    <TextField fx:id="CreditCardExpirationField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label text="Code de sécurité de la carte:" GridPane.rowIndex="2" />
                    <TextField fx:id="CreditCardCVCField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                </children>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            </GridPane>
        </TitledPane>
        <TitledPane fx:id="GiftCardSection" collapsible="false" managed="true" text="Informations de la carte cadeau">
            <GridPane alignment="CENTER_LEFT" hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                </columnConstraints>
                <children>
                    <Label text="Numéro de carte cadeau:" />
                    <TextField GridPane.columnIndex="1" />
                </children>
                <rowConstraints>
                    <RowConstraints />
                </rowConstraints>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
            </GridPane>
        </TitledPane>
        <TitledPane collapsible="false" managed="true" text="Adresse de livraison">
            <GridPane alignment="BOTTOM_LEFT" hgap="10.0" vgap="10.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                </columnConstraints>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <children>
                    <Label text="Adresse de livraison:" />
                    <TextField fx:id="DeliveryAddressTextField" GridPane.columnIndex="1" />

                    <RadioButton fx:id="SameAdressesCheckbox" text="L'adresse de facturation est la même que l'adresse de livraison." GridPane.columnSpan="2" GridPane.rowIndex="1" />
                </children>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </TitledPane>
        <TitledPane fx:id="BillingAddressSection" collapsible="false" managed="true" text="Adresse de facturation">
            <GridPane alignment="CENTER_LEFT" hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                </columnConstraints>
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </padding>
                <children>
                    <Label text="Adresse de facturation:" />
                    <TextField fx:id="BillingAddressTextField" GridPane.columnIndex="1" />
                </children>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </TitledPane>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label alignment="CENTER" contentDisplay="CENTER" text="Option de livraison:" />
            <ChoiceBox fx:id="DeliveryOptionChoiceBox" prefWidth="200.0" />
        </HBox>
      <padding>
         <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
      </padding>
    </VBox>
</AnchorPane>
